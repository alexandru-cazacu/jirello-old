<main class="max-w-lg mx-auto pt-10 pb-12 px-4 lg:pb-16">
  <.form let={f} for={@changeset} action={Routes.project_path(@conn, :create)}>
    <div class="space-y-6">
      <div>
        <h1 class="text-lg leading-6 font-medium text-gray-900">New Project</h1>
        <p class="mt-1 text-sm text-gray-500">Letâ€™s get started by filling in the information below to create your new project.</p>
      </div>

      <%= if @changeset.action do %>
        <div class="rounded-md bg-red-50 p-4 m-4" role="alert">
            <div class="flex">
                <div class="flex-shrink-0">
                <!-- Heroicon name: solid/x-circle -->
                <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
                </div>
                <div class="ml-3">
                <h3 class="text-sm text-red-800">Oops, something went wrong! Please check the errors below.</h3>
                </div>
            </div>
        </div>
      <% end %>

      <div>
        <%= label f, :title, class: "block text-sm font-medium text-gray-700" %>
        <div class="mt-1">
          <%= text_input f, :title,
            placeholder: "Project name",
            required: true,
            class: "block w-full shadow-sm focus:ring-primary-500 focus:border-primary-500 sm:text-sm border-gray-300 rounded-md" %>
        </div>
        <%= error_tag f, :title %>
      </div>

